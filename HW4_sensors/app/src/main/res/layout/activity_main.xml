<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="activation=false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/activation" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="counter 0/10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/counter" android:layout_weight="1"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/accelerometer_x_values"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textX" android:layout_weight="1"/>
    </LinearLayout>

    <com.jjoe64.graphview.GraphView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mGraphX"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/accelerometer_y_values"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textY" android:layout_weight="1"/>

    </LinearLayout>
    <com.jjoe64.graphview.GraphView
        android:layout_weight="1"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mGraphY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/accelerometer_z_values"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textZ" android:layout_weight="1"/>

    </LinearLayout>
    <com.jjoe64.graphview.GraphView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mGraphZ"/>
</LinearLayout>